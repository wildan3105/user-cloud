include ../static/layout

body
  div(class='container')
    div(class='row')
      div(class='col-md-10')
      h3 List of all participants
      p
      form(method='post')
        table(class='table table-striped')
          tr
          th Email
          th Password
          th Edit
          th Delete
          th Activate
          th Registered at
          th Status
          each user in users
            tr
              td=user.email
              td=user.password
              td
                a(href='./list/#{user.email}', class='btn btn-primary', name='edit', value='Edit') Edit
              td
                a(href='./list/#{user.email}/delete', class='btn btn-danger', name='delete', value='Delete') Delete
              td
                input(type='submit' class='btn btn-success' name='activate' value='Activate')
              td=user.registered
              td None/Activated
      a(href="./home") Back to Dashboard        
    
  
